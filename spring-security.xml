<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 http://www.springframework.org/schema/security
 http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <beans:bean id="webexpressionHandler"
                class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler"/> 
    <beans:bean id="encoder"
                class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
                
    <http pattern="/loginPage" security="none" />    
    <http pattern="/error" security="none" />
    <http pattern="/css/**" security="none" />
    <http pattern="/js/**" security="none" />
    <http pattern="/img/**" security="none" />
    <http pattern="/images/**" security="none" />
    <http pattern="/plugins/**" security="none" />

    <http auto-config="true" use-expressions="false">
        <form-login login-processing-url="/j_spring_security_check"
                    login-page="/loginPage"
                    authentication-failure-url="/loginPage?login_error=1"/>
       
        <intercept-url pattern="/" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY" />

        <intercept-url pattern="/addProfilePage" 
                       access="ROLE_ADMIN" />
        <intercept-url pattern="/loginPage" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />

        <intercept-url pattern="/addPost" 
                        access="ROLE_USER, ROLE_ADMIN" />
        
        <intercept-url pattern="/addBlogPost" 
                        access="ROLE_USER, ROLE_ADMIN" />
        <intercept-url pattern="/goLogin" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />
        <intercept-url pattern="/createProfile" 
                        access="ROLE_ADMIN" />
        <intercept-url pattern="/categorizeBlogPosts" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />
        <intercept-url pattern="/goHome" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />
        <intercept-url pattern="/deletePost" 

                        access="ROLE_ADMIN" />

        <intercept-url pattern="/updatePost" 
                        access="ROLE_ADMIN" />
         <intercept-url pattern="/editPost" 
                        access="ROLE_ADMIN" />
         <intercept-url pattern="/pendingList" 
                        access="ROLE_ADMIN" />
         <intercept-url pattern="/approvePost" 
                        access="ROLE_ADMIN" />
         <intercept-url pattern="/displayBlogPost" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />
         <intercept-url pattern="/displayBlogPostPage" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />
         <intercept-url pattern="/logOut" 
                        access="IS_AUTHENTICATED_ANONYMOUSLY" />
         <intercept-url pattern="/account" 
                        access="ROLE_USER, ROLE_ADMIN" />
         
         
         
        <intercept-url pattern="/static/addStaticPost" 
                       access="ROLE_ADMIN" />

        <intercept-url pattern="/static/displayStaticPage" 
                       access="IS_AUTHENTICATED_ANONYMOUSLY" />
        <intercept-url pattern="/static/submitStaticPost" 
                       access="ROLE_ADMIN" /> 
        <intercept-url pattern="/static/addStaticPost" 
                       access="ROLE_ADMIN" />       
        
        
        
        

       
         
               
        
        
        <intercept-url pattern="/**" 
                       access="ROLE_USER" />
    </http>
    <authentication-manager>
        <authentication-provider>

                        <password-encoder ref="encoder"/>
            <jdbc-user-service id="userService"
                               data-source-ref="dataSource"
                               users-by-username-query="select UserName, Password, 1 as enabled from Profile where UserName=?"
                               authorities-by-username-query="select  UserName, case AdminID when 1 then 'ROLE_ADMIN' else 'ROLE_USER' end as authority from Profile where UserName=?"/>
        </authentication-provider>
    </authentication-manager>
</beans:beans>